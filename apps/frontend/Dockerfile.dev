# Development Dockerfile for Next.js with hot reload
FROM node:20-alpine

WORKDIR /app

# Install dependencies for better development experience
RUN apk add --no-cache libc6-compat

# Copy package files
COPY package.json package-lock.json* ./

# Install all dependencies (including devDependencies)
RUN npm ci

# Copy application files
COPY . .

# Expose Next.js dev server port and debugger port
EXPOSE 3000 9229

# Set environment
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1

# Run Next.js in development mode with debugger
CMD ["npm", "run", "dev"]

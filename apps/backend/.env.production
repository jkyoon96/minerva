# Application
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# Database
DB_HOST=production-db-host
DB_PORT=5432
DB_USERNAME=eduforum
DB_PASSWORD=change-this-strong-password
DB_DATABASE=eduforum
DB_SYNC=false
DB_LOGGING=false

# JWT
JWT_SECRET=production-secret-key-must-be-changed

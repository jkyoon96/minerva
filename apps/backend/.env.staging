# Application
NODE_ENV=staging
PORT=3000
API_PREFIX=api/v1

# Database
DB_HOST=staging-db-host
DB_PORT=5432
DB_USERNAME=eduforum
DB_PASSWORD=change-this-password
DB_DATABASE=eduforum
DB_SYNC=false
DB_LOGGING=false

# JWT
JWT_SECRET=staging-secret-key-change-this
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=staging-redis-host
REDIS_PORT=6379

# Swagger
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# CORS
CORS_ORIGIN=https://staging.eduforum.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=50
